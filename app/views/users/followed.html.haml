.userindex
  %i.fas.fa-users.fa-3x
  %p フォロー
  .user-list
    -unless @user.following_user.present?
      %h5 フォローしている人はいません
      =link_to users_path do
        %h5 ユーザー一覧へ
    %table
      -if user_signed_in?
        -@user.following_user.where.not(id: current_user.id).each do |user|
          %tr
            %th
              =link_to user_path(user.id) do
                -# -if user.image.url
                -#   =image_tag user.image.url, class: 'userimage', size: "40x40"
                =user.nickname
            %td
              .likes
                -unless user.id==current_user.id
                  -if current_user.following?(user)
                    = link_to unfollow_path(user.id), method: :post, class:"likes__unfollow" do
                      フォロー中
                  -else
                    = link_to 'フォローする', follow_path(user.id), method: :post, class:"likes__follow"
                -else
                  .likes__my
                    %i.fas.fa-user
              .number-of-posts
                =user.posts.count
                %br/
                %i.fas.fa-pencil-alt
              .follower
                = link_to following_user_path(user) do
                  =user.followed.count
                  %br/
                  フォロワー
              .followed
                =link_to followers_user_path(user) do
                  =user.follower.count
                  %br/
                  フォロー
      -else
        -@user.following_user.each do |user|
          %tr
            %th
              =link_to user_path(user.id) do
                -# -if user.image.url
                -#   =image_tag user.image.url, class: 'userimage', size: "40x40"
                =user.nickname
            %td
              .number-of-posts
                =user.posts.count
                %br/
                %i.fas.fa-pencil-alt
              .follower
                = link_to following_user_path(user) do
                  =user.followed.count
                  %br/
                  フォロワー
              .followed
                =link_to followers_user_path(user) do
                  =user.follower.count
                  %br/
                  フォロー