.form
  =form_with model: @post, class:"postform", local: true do |f|
    .form__title
      %i.fas.fa-feather.fa-3x
      %h3 文字る
    .form__input
      %ul
        .formpart
          %li
            = f.label :vocab, "言葉"
            %span 必須
          %li
            = f.text_field :vocab, class: 'postformwhat', placeholder:'言葉、又はフレーズを入力'
        .formpart
          %li
            = f.label :definition, "意味"
            %span 必須
          %li
            = f.text_area :definition, class: 'postformwhat'
        .formpart  
          %li
            = f.label :example, "例文"
            %span 必須
          %li
            = f.text_area :example, class: 'postformwhat'
        .formpart  
          %li
            =f.label :image, "画像を選択"
            %span 必須
            = f.label :image, class:"filelabel" do
              %i.fas.fa-image.fa-lg
              = f.file_field :image, class: 'image-post'
        .formpart
          %li
            = f.submit '投稿する', class: 'postformbtn'